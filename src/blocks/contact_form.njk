<section class="{{ "container-fluid" if fluid else "container" }} mt-5 contact-form">
    <div class="row">
        <div class="col-md-6">
            <h2 class="fw-bold">{{title}}</h2>
            <p>{{subtitle}}</p>
            <ul class="contact-form__contact-details">
                <li><img src="/assets/icons/ic_sharp-email.png"/>
                    <b>info@kaleitics.com</b>
                </li>
                <li><img src="/assets/icons/ph_phone-fill.png"/>
                    <b>(+1) 847-343-2618</b>
                </li>
                <li><img src="/assets/icons/ion_location-sharp.png"/>
                    <b>West Dundee, Chicago, Illanois</b>
                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <form>
                <div class="row">
                    <div class="col-6">
                        <label for="name">
                            <b>Name</b>
                        </label>
                        <input type="text" class="form-control" id="name" placeholder="Enter name">
                    </div>
                    <div class="col-6">
                        <label for="email">
                            <b>Email</b>
                        </label>
                        <input type="text" class="form-control" id="email"  placeholder="Enter email">
                    </div>
                    <div class="col-6 mt-2">
                        <label for="phone">
                            <b>Phone</b>
                        </label>
                        <input type="text" class="form-control" id="phone"  placeholder="Enter phone">
                    </div>
                    <div class="col-6 mt-3">
                        <label for="company">
                            <b>Company</b>
                        </label>
                        <input type="text" class="form-control" id="company" placeholder="Enter company">
                    </div>
                    <div class="col-12 mt-3">
                        <label for="message">
                            <b>Message</b>
                        </label>
                        <textarea type="text" class="form-control" id="message" rows=4 ></textarea>
                    </div>
                    <div class="col-12 mt-2">
                        <button class="btn btn-primary hvr-radial-out p-2">{{btntext}}</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>